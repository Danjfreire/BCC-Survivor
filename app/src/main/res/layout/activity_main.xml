<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wallace.bcc_survivor_questoes.MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="30dp"
        android:text="@string/modo_jogo"
        app:layout_constraintBottom_toTopOf="@+id/botaoQuestoes"
        app:layout_constraintStart_toStartOf="@+id/botaoQuestoes" />

    <Button
        android:id="@+id/botaoQuestoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/banco_de_quest_es"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
